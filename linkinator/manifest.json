{
  "manifest_version": 2,
  "name": "AzDO Linkinator",
  "author": "Daniel Cazzulino",
  "version": "0.5.4",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },  
  "content_scripts": [
    {
      "matches": ["https://devdiv.visualstudio.com/*"],
      "js": ["jquery-3.2.1.min.js"]
    },
    {
      "matches": ["https://dev.azure.com/*"],
      "js": ["jquery-3.2.1.min.js"]
    },
    {
      "matches": ["https://developercommunity.visualstudio.com/content/problem/*"],
      "js": ["jquery-3.2.1.min.js"]
    }
  ],  
  "page_action": {
    "default_icon": {                    
      "16": "images/AzDO16.png",
      "24": "images/AzDO24.png",
      "32": "images/AzDO32.png",
      "64": "images/AzDO64.png",
      "128": "images/AzDO128.png"
    },
    "default_title": "Create a nice short AzDO link and copy to clipboard!"
  },
  "permissions": [
    "tabs",
    "declarativeContent",
    "activeTab",
    "webNavigation"    
  ]
}